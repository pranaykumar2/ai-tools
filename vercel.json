{
  "functions": {
    "api/tools.js": {
      "maxDuration": 15
    },
    "api/admin.js": {
      "maxDuration": 15
    },
    "api/contact.js": {
      "maxDuration": 10
    },
    "api/reels.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/public/index.html"
    },
    {
      "source": "/tools",
      "destination": "/public/list-tools.html"
    },
    {
      "source": "/contribute",
      "destination": "/public/contribute.html"
    },
    {
      "source": "/reels",
      "destination": "/public/reels.html"
    },
    {
      "source": "/admin",
      "destination": "/public/admin/index.html"
    },
    {
      "source": "/admin/submissions",
      "destination": "/public/admin/submissions.html"
    },
    {
      "source": "/api/tools/submit",
      "destination": "/api/tools"
    },
    {
      "source": "/api/admin/tools/(.*)",
      "destination": "/api/admin"
    },
    {
      "source": "/api/admin/submissions",
      "destination": "/api/admin"
    },
    {
      "source": "/api/admin/notifications/(.*)",
      "destination": "/api/admin"
    },
    {
      "source": "/api/admin/stats",
      "destination": "/api/admin"
    },
    {
      "source": "/api/admin/categories",
      "destination": "/api/admin"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ]
}
